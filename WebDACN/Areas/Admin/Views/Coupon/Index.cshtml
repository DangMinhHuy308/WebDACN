@model IEnumerable<WebDACN.Models.EF.Coupon>

@{ ViewBag.Title = "Danh sách phiếu giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/coupon" class="nav-link">Danh sách phiếu giảm giá</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh sách phiếu giảm giá</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>

        <div class="card-tools">
            <a href="/admin/coupon/createcoupon" class="btn btn-primary">Thêm mới</a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div class="coupon-list">

                    <table class="table table-hover"">
                        <thead>
                            <tr>
                                <th>STT</th>

                                <th>Mã</th>
                                <th>Tên</th>
                                <th>Loại</th>
                                <th>Số tiền giảm</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày hết hạn</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                var i = 1;
                                foreach (var coupon in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@coupon.Code</td>
                                        <td>@coupon.Name</td>
                                        <td>@coupon.Type</td>
                                        <td>@WebDACN.Common.Common.FormatNumber(coupon.Number, 0)</td>

                                        <td>@coupon.StartDate</td>
                                        <td>@coupon.EndDate</td>
                                        <td>@coupon.IsActive</td>
                                    </tr>

                                    i++;

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>

