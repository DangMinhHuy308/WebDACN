﻿@model WebDACN.Models.EF.News
@{
    ViewBag.Title = "Tin tức thời trang";
}

<!-- Slider -->
<style>
    
    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-12">
                <h1 class="title-news">@Model.Title</h1>
                <img src="@Model.Image"/>
            </div>
        </div>
        <div class="row">
            
            <div class="col-md-12">
                    @Html.Raw(Model.Detail)
                </div>
        </div>
    }

</div>