@model IEnumerable<WebDACN.Models.ShoppingCartItem>
@using WebDACN.Common
@{
    ViewBag.Title = "Partial_Item_Cart";
}

<table>
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Giá tiền</th>
            <th>Số lượng</th>
            <th>Tổng</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Any())
        {
            var i = 0;
            var tongtien = decimal.Zero;
            foreach (var item in Model)
            {
                tongtien += item.TotalPrice;

                <tr id="trow_@item.ProductId">
                    <td class="cart__product__item ">
                        <img src="@item.ProductImg" width="80" alt="">
                        <div class="cart__product__item__title">
                            <h6>@item.ProductName</h6>

                        </div>
                    </td>
                    <td class="cart__price">@Common.FormatNumber(item.Price, 0)</td>
                    <td class="cart__quantity">
                        <div class="pro-qty">
                            <input type="number" id="Quantity_@item.ProductId" value="@item.Quantity">

                        </div>
                    </td>
                    <td class="cart__total">@Common.FormatNumber(item.TotalPrice, 2)</td>
                    <td class="cart__close btnDelete" data-id="@item.ProductId"><span class="icon_close "></span>
                    <td class="cart__close btnUpdate" data-id="@item.ProductId">
                        <span class="icon_upload "></span>

                    </td>
                </tr>
                i++;
            }
    <tr>
        <th colspan="6" class="text-right">Tổng: </th>
        <th class="text-center">@Common.FormatNumber(tongtien, 0)</th>
        <th></th>
    </tr>
        }
        else
        {
            <tr>
                <th colspan="7">Không có sản phẩm nào trong giỏ hàng</th>
            </tr>
}



    </tbody>
</table>


